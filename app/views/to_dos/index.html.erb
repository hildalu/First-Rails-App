<h1>Listing to_dos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Due on</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @to_dos.each do |to_do| %>
  <tr>
    <td><%= to_do.name %></td>
    <td><%= to_do.due_on %></td>
    <td><%= to_do.completed %></td>
    <td><%= link_to 'Show', to_do %></td>
    <td><%= link_to 'Edit', edit_to_do_path(to_do) %></td>
    <td><%= link_to 'Destroy', to_do, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

